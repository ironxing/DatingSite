                        </div>
                        <div class="card-body">
                            @Html.ActionLink("View profile", "Details", "Profile", new { Id = @Model[1].Id }, null)
                        </div>
                    </div>
                </div>
            }
            if (Model[2] != null)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <h3 class="card-header">
                            @Model[2].FirstName @Model[2].LastName
                        </h3>
                        <div class="card-body">
                            <h6 class="card-subtitle text-muted"></h6>
                        </div>
                        <img src="~/Images/@Url.Content(Model[2].ImagePath)" style="height:200px;width:200px;" />
                        <div class="card-body">
                            <p class="card-text">@Model[2].Description</p>
                        </div>
                        <div class="card-body">
                            @Html.ActionLink("View profile", "Details", "Profile", new { Id = @Model[2].Id }, null)
                        </div>
                    </div>
                </div>
            }
        }
    
</div>
