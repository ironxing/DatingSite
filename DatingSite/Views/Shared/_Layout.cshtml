@{
    var testList = ViewData["ProfileVisits"] as List<DatingSite.Models.ProfileVisit>;
}
<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("DatingSite", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                </ul>

                @using (Html.BeginForm("SearchResult", "Profile", null, FormMethod.Post, htmlAttributes: new { @class = "form-inline my-2 my-lg-0"}))
                {
                    <input id="SearchInput" name="SearchInput" class="form-control mr-sm-2" type="text" placeholder="Search" required="required">
                    <input type="submit" value="Search" class="btn btn-secondary" />
                }

                    <div class="nav navbar-nav ml-auto row glyphicon-align-center">

                            @if (Request.IsAuthenticated)
                            {
                                @Html.Action("FriendRequestPartialView", "Profile")
                            }
                        @Html.Partial("_LoginPartial")
                    </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TeamJXK Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
    </html>
